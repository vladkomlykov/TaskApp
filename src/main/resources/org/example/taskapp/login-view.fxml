      <TextField fx:id="mailLogin" layoutX="52.0" layoutY="244.0" prefHeight="26.0" prefWidth="630.0" promptText="Введите почту" visible="true" />
      <Button fx:id="codeBtn" layoutX="304.0" layoutY="381.0" mnemonicParsing="false" onAction="#OnGetCodeClick" prefHeight="36.0" prefWidth="124.0" text="Отправить код" visible="false" />
    </children>
</AnchorPane>
